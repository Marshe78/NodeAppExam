<%- include('partials/head') %>

<%- include('header') %>
(Il faut d'abord créer une annonce, pour qu'elle soit affichée sur cette page !)
<h1>Liste des Annonces</h1>

<ul>
 
  <% annonces.forEach((annonce) => { %>
    <li class="annonces">
      <a class="annonces" href="http://localhost:4000/annonce/<%= annonce._id %>">
        <%= annonce.titre %>
      </a>
      <button type="button" class="leBouton" onclick="deleteAnnonce('<%= annonce._id %>')">Supprimer</button>
    </li>
  <% }) %>
  
</ul>


<style>

  .annonces{
    font-size: 20px;
    color:brown;
    text-decoration: none;
    margin-top: 12px;
  }
  .leBouton{
    border: 4px solid red;
    cursor: pointer;
  }
</style>